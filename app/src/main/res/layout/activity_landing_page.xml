<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".landingPage">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/MaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="346dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imMoneyIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/income" />

        <TextView
            android:id="@+id/tvMoneyIn"
            android:layout_width="94dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:text="MONEY IN"
            app:layout_constraintStart_toEndOf="@+id/imMoneyIn"
            app:layout_constraintTop_toTopOf="@+id/imMoneyIn" />

        <TextView
            android:id="@+id/tvAmountIn"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:text="Kes 42400"
            app:layout_constraintEnd_toEndOf="@+id/tvMoneyIn"
            app:layout_constraintTop_toBottomOf="@+id/tvMoneyIn" />

        <ImageView
            android:id="@+id/imMoneyOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/imMoneyIn"
            app:layout_constraintStart_toEndOf="@+id/tvMoneyIn"
            app:srcCompat="@drawable/expense" />

        <TextView
            android:id="@+id/tvMoneyOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="MONEY OUT"
            app:layout_constraintStart_toEndOf="@+id/imMoneyOut"
            app:layout_constraintTop_toTopOf="@+id/imMoneyOut" />

        <TextView
            android:id="@+id/tvAmountOut"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_marginTop="12dp"
            android:text="KES 23700"
            app:layout_constraintEnd_toEndOf="@+id/tvMoneyOut"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvMoneyOut"
            app:layout_constraintTop_toBottomOf="@+id/tvMoneyOut" />

        <ImageView
            android:id="@+id/imBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imMoneyIn"
            app:srcCompat="@drawable/balance" />

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="81dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:text="BALANCE"
            app:layout_constraintStart_toEndOf="@+id/imBalance"
            app:layout_constraintTop_toTopOf="@+id/imBalance" />

        <TextView
            android:id="@+id/tvBalanceAmount"
            android:layout_width="84dp"
            android:layout_height="27dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:text="KES18700"
            app:layout_constraintStart_toStartOf="@+id/tvBalance"
            app:layout_constraintTop_toBottomOf="@+id/tvBalance" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toEndOf="@+id/tvBalanceAmount"
            app:layout_constraintTop_toTopOf="@+id/tvBalance"
            app:srcCompat="@drawable/transactions" />

        <TextView
            android:id="@+id/tvTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TRANSACTIONS"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <TextView
            android:id="@+id/tvTransactionAmount"
            android:layout_width="35dp"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="8"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/tvTransactions" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>